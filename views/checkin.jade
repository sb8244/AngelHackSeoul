form.form-horizontal(action='/checkin', method='POST')
  select#type.input-xlarge.padbot(name='type')
    option(value='x') Choose Event Type
    option(value='food') Food
    option(value='music') Music
    option(value='exhibit') Exhibit
    option(value='party') Party
    option(value='shopping') Shopping
  select#hours.input-xlarge.padbot(name='hours')
    option(value='x') Event Duration in Hours
    option(value='1') 1
    option(value='2') 2
    option(value='3') 3
    option(value='4') 4
    option(value='5') 5
    option(value='6') 6
    option(value='7') 7
    option(value='8') 8
  textarea#desc.input-xlarge.padbot(name='desc', placeholder='Optional Description')
  button.btn.btn-success.btn-block Popup!